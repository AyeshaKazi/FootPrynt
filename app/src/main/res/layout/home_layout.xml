<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:id="@+id/abc">
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/home_card"
      card_view:cardElevation="2dp"
      card_view:cardUseCompatPadding="true">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="10"
          android:padding="10dp">
          <ImageButton
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/btn_cat"
              android:layout_gravity="center"
              android:src="@mipmap/ic_launcher"
              android:background="@drawable/round"
              android:layout_weight="4"
              />
          <RelativeLayout
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="6">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Hello Karan Bheda!"
               android:layout_marginTop="10dp"
               android:textSize="16sp"
               android:id="@+id/tv_username"
               android:textColor="@color/black"/>
           <View
               android:layout_width="wrap_content"
               android:layout_height="1dp"
               android:background="@color/black"
               android:layout_marginTop="5dp"
               android:layout_marginRight="15dp"
               android:layout_below="@+id/tv_username"
               android:id="@+id/view1"
               />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Your Miles"
                  android:layout_below="@+id/view1"
                  android:layout_marginTop="10dp"
                  android:textSize="15sp"
                  android:id="@+id/tv_yourmiles"/>
              <android.support.v7.widget.CardView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/card_miles"
                  android:layout_below="@id/tv_yourmiles"
                  android:layout_marginTop="5dp">
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:background="#f7f7f7"
                      android:textColor="@color/colorAccent"
                      android:text="163432"
                      android:textSize="15sp"
                      android:id="@+id/tv_miles"
                      android:padding="5dp"
                      />
              </android.support.v7.widget.CardView>
          </RelativeLayout>
      </LinearLayout>
  </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_offfer"
            android:layout_below="@+id/home_card"
            android:layout_marginTop="15dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Offers Available:"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/tv_offers"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_below="@+id/tv_offers"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:id="@+id/tv_excoffer"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Exclusive"
                        android:layout_below="@+id/tv_excoffer"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp">

                </android.support.v7.widget.CardView>

            </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

  </ScrollView>
</FrameLayout>